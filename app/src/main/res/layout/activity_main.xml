<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentPrincipal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:padding="15dp">
        <EditText
            android:id="@+id/operationAfter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textAlignment="center"
            android:background="#5C5C5F"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textAlignment="center"
            android:background="#5C5C5F"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="AC"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#5C5C5F"/>

        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="C"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#5C5C5F"/>

        <Button
            android:id="@+id/btnResto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="%"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#5C5C5F"/>

        <Button
            android:id="@+id/btnDividir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="/"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#FF9F0A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btnMulti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#FF9F0A">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btnRestar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#FF9F0A">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#FF9F0A">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="0"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="."
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#2A2A2C">

        </Button>
        <Button
            android:id="@+id/btnResolver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="="
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:backgroundTint="#FF9F0A">

        </Button>
    </LinearLayout>
</LinearLayout>